<Page
    x:Class="MirrorEssentials.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MirrorEssentials"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Left" Height="561" Margin="40,40,0,0" VerticalAlignment="Top" Width="590">
            <TextBlock x:Name="timeTextBlock" TextWrapping="Wrap" Text="9:15 AM" FontSize="128" Foreground="White" FontWeight="Thin"/>
            <TextBlock x:Name="dateTextBlock" TextWrapping="Wrap" Text="Sunday, April 23rd" FontSize="54" Foreground="White" FontWeight="Thin"/>
            <TextBlock x:Name="weatherTextBlock" TextWrapping="Wrap" FontSize="28" Foreground="White" FontWeight="Thin" Margin="0,0,-0.6,0">
            	<Run Text="It's quite chilly tonight, at 5C with partial clouds"/>
            </TextBlock>
        </StackPanel>

    </Grid>
</Page>
